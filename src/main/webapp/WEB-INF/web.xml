<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>leagues-file</param-name>
    <param-value>/WEB-INF/data/leagues.txt</param-value>
  </context-param>
  <servlet>
    <servlet-name>SuccessServlet</servlet-name>
    <servlet-class>comm.example.view.SuccessServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ErrorServlet</servlet-name>
    <servlet-class>comm.example.view.ErrorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddleagueServlet</servlet-name>
    <servlet-class>comm.example.controller.AddLeagueServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddLeagueServletVersion2</servlet-name>
    <servlet-class>comm.example.view.AddLeagueServletViewVersion2</servlet-class>
    <init-param>
      <param-name>season-list</param-name>
      <param-value>Winter,Summer,Autumn,Spring</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddLeagueServletVersion2</servlet-name>
    <url-pattern>/add_league_v2.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddleagueServlet</servlet-name>
    <url-pattern>/add_league.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SuccessServlet</servlet-name>
    <url-pattern>/success.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ErrorServlet</servlet-name>
    <url-pattern>/error.view</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
